<div class="container-fluid w-75">
    <div class="row align-items-center justify-content-center">
        <div class="col-sm-auto">
            <h2>Cadastros</h2>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-sm-auto">
            <a class="btn btn-primary" href="/cadastros/novo">Novo Cadastro</a>
        </div>
    </div>
    <div class="container w-50 mt-4">
        <form class="row form-group justify-content-center" action="/cadastros/busca" method="get">
            <input class="col-md-auto form-control" type="text" name="buscaNome" placeholder="Busca por nome">
            <div class="col-sm-auto">
                <input class="btn btn-secondary my-2" type="submit" value="Buscar">
            </div>
        </form>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            <% if (cad) { %>
                <%- include('__cadastrosTabela.ejs') %>
            <% } %>
        </div>
    </div>
</div>



